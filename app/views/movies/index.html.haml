-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td{:class => ('hilite' if params[:sort] == "title")}= link_to 'Movie Title', movies_path(:sort => 'title'), :id => 'title_header'
        %td= movie.rating
        %td{:class => ('hilite' if params[:sort] == "release_date")}= link_to 'Release Date', movies_path(:sort => 'release_date'), :id => 'release_date_header'
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
